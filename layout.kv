#:import CardTransition kivy.uix.screenmanager.CardTransition


<Bordered@Widget>
    color: [1,1,1,1]
#    padding: sp(10)
    radius: 10
    line_width: None
    canvas.before:
        Color:
            rgba: self.color
        Line:
            width: self.line_width or 1
            rounded_rectangle: self.x, self.y, self.width, self.height, self.radius


<ImageButton@ButtonBehavior+Image>
    allow_stretch: True


<BorderedButton@ButtonBehavior+Label+Bordered>
    font_size: sp(18)


<Header@BoxLayout>
    orientation: 'horizontal'
    size_hint_y: 0.06
    padding: [12,6,12,6]
    color: [1,1,1,1]
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 0.5
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -2
            spread_radius: 3, 3
            border_radius: 6, 6, 6, 6
            blur_radius: 6
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos


<Footer@Widget>
    size_hint_y: 0.03
    color: [1,1,1,1]
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos


<Indicator@Label+Bordered>
    size_hint_x: None
    size: self.texture_size
    padding: sp(10)
    font_size: self.height
    font_name: 'assets/fonts/JetBrainsMono-Bold.ttf'
    color: [0,0,0,1]
    radius: sp(5)


<Selector@BoxLayout+Bordered>
    orientation: 'vertical'
    text: ''
    size_hint_y: None
    height: sp(80)
    line_width: None
    options: ['Option']
    current_index: 0
    value: self.options[self.current_index]

    Label:
        size_hint_y: 0.4
        text: root.text
        color: root.color
        font_size: sp(18)
        bold: True
        canvas.before:
            Color:
                rgba: root.color
            Line:
                width: root.line_width or 1
                points: self.pos[0], self.pos[1], self.pos[0] + self.width, self.pos[1]

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.6
        padding: sp(10)

        ImageButton:
            size_hint_x: None
            width: self.height
            color: root.color
            source: 'assets/images/left.png'
            on_release:
                root.current_index = (root.current_index - 1) % len(root.options)
        Label:
            font_size: sp(18)
            color: root.color
            text: root.options[root.current_index]
        ImageButton:
            size_hint_x: None
            width: self.height
            color: root.color
            source: 'assets/images/right.png'
            on_release:
                root.current_index = (root.current_index + 1) % len(root.options)


<MainLayout>
    transition: CardTransition()

    Screen:
        name: 'main_screen'

        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: root.primary_background
                Rectangle:
                    size: self.size
                    pos: self.pos

            Header:
                color: root.secondary_accent

                Image:
                    size_hint_x: None
                    width: self.height
                    source: 'assets/images/mine.png'
                    size: self.texture_size
                Label:
                    color: root.primary_background
                    font_name: 'assets/fonts/JetBrainsMono-Bold.ttf'
                    font_size: sp(24)
                    text: 'Minesweeper Game'
                Image:
                    size_hint_x: None
                    width: self.height
                    source: 'assets/images/mine.png'
                    size: self.texture_size

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.75, None
                    height: self.minimum_height
                    spacing: sp(20)

                    Selector:
                        text: 'Theme'
                        color: root.secondary_accent
                        options: ['Dark', 'Light']
                        on_value: root.toggle_dark_mode(self.value)
                    Selector:
                        text: 'Color'
                        color: root.secondary_accent
                        options: ['Orange', 'Yellow', 'Green', 'Blue', 'Purple', 'Pink', 'Red']
                        on_value: root.set_color_theme(self.value)
                    Selector:
                        text: 'Size'
                        color: root.secondary_accent
                        options: ['Small', 'Medium', 'Large']
                        current_index: 1
                        on_value: root.set_game_size(self.value)
                    Selector:
                        text: 'Difficulty'
                        color: root.secondary_accent
                        options: ['Easy', 'Medium', 'Hard']
                        on_value: root.difficulty = self.value.lower()
                    BorderedButton:
                        size_hint_y: None
                        height: sp(50)
                        text: 'Play'
                        color: root.secondary_accent
                        on_release:
                            root.toggle_screen()
                            app.build_game()

            Footer:
                color: root.secondary_accent

    Screen:
        name: 'game_screen'

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            canvas.before:
                Color:
                    rgba: root.primary_background
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.05
                padding: [10,0,10,0]
#                color: root.secondary_accent
                Indicator:
                    text: '00'
                    line_width: 2
                    color: root.font_color
                Button:
                    text: 'back to home'
                    on_release: root.toggle_screen()
                Indicator:
                    text: '00:00'
                    line_width: 2
                    color: root.font_color



            GameBoard:
                id: game_board
                color: root.primary_accent
                background_color: root.secondary_background

